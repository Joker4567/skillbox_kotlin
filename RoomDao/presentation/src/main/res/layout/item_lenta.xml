<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="5dp"
    android:background="@drawable/bg_item_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lenta_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:paddingStart="5dp"
        tools:text="Здоровая неделя" />

    <TextView
        android:id="@+id/lenta_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        tools:text="Скидка на мясо 10%" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/lenta_item_restourant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:paddingStart="5dp"
            android:textAlignment="textStart"
            tools:text="Ресторан 1" />

        <TextView
            android:id="@+id/lenta_item_eat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@android:color/black"
            android:paddingEnd="5dp"
            tools:text="Стэйк" />


    </LinearLayout>

</LinearLayout>