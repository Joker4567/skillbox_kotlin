<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="5dp"
    android:background="@drawable/bg_item_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rating_item_restourant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:paddingStart="5dp"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginEnd="10dp"
            tools:text="Ресторан 1" />

        <TextView
            android:id="@+id/rating_item_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="4dp"
            android:background="@drawable/bg_item_star"
            android:textColor="@android:color/black"
            tools:text="1*" />

    </LinearLayout>

    <TextView
        android:id="@+id/rating_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingStart="5dp"
        tools:text="Вкусно и здорово" />

    <TextView
        android:id="@+id/rating_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        android:paddingStart="5dp"
        tools:text="Вкусно и здорово" />

</LinearLayout>