<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >

    <ImageView
        android:id="@+id/ownerAvatarIV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:src="@tools:sample/avatars"
        android:contentDescription="@string/owner_avatar"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/repoIdTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Идентификатор" />


        <TextView
            android:id="@+id/repoNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Название репозитория"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/repoDescTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Описание репозитория"
            android:layout_marginTop="8dp"/>


    </LinearLayout>
</LinearLayout>